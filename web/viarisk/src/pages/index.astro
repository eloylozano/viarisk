---
import Layout from "../layouts/Layout.astro";
import HeroHome from "../components/HeroHome.astro";
import Simulator from "../components/Simulator.astro";
---

<Layout title="ViaRisk - Estación de Control">
  <main class="space-y-20 pb-20 relative overflow-hidden">
    <div
      class="absolute top-[30%] left-1/2 -translate-x-1/2 w-full h-[1000px] pointer-events-none"
    >
      <div
        class="absolute inset-0 bg-radial-gradient from-forest-500/10 via-transparent to-transparent opacity-30"
      >
      </div>
    </div>

    <HeroHome />

    <section class="relative z-10">
      <div class="container mx-auto px-4 text-center mb-16">
        <div
          class="inline-block px-4 py-1.5 rounded-full bg-forest-700/60 border border-forest-500/10 mb-6 backdrop-blur-md"
        >
          <span
            class="text-forest-400 font-black tracking-[0.4em] flex items-center uppercase text-[10px]"
          >
            Laboratorio Predictivo
          </span>
        </div>

        <h2
          class="text-white font-display text-5xl md:text-6xl font-black italic uppercase tracking-tighter drop-shadow-[0_5px_15px_rgba(0,0,0,0.5)]"
        >
          Pon a prueba <span class="text-forest-500">la IA</span>
        </h2>

        <div
          class="w-80 h-1 bg-linear-to-r from-transparent via-forest-500 to-transparent mx-auto mt-6 opacity-90"
        >
        </div>
      </div>

      <Simulator />
    </section>
  </main>
</Layout>

<style>
  /* Definición del gradiente radial para el resplandor de fondo */
  .bg-radial-gradient {
    background: radial-gradient(
      circle at center,
      var(--tw-gradient-from) 0%,
      var(--tw-gradient-to) 70%
    );
  }
</style>
