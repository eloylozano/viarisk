---
import DashboardGrid from "./DashboardGrid.astro";
import AIInsights from "./AIInsights.astro";
---

<section class="relative min-h-screen flex items-center justify-center py-6 md:py-12 overflow-hidden bg-ocean-950">
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
    <div class="absolute -top-24 -left-24 w-64 md:w-96 h-64 md:h-96 bg-forest-500/10 rounded-full blur-[80px] md:blur-[120px]"></div>
    <div class="absolute -bottom-24 -right-24 w-64 md:w-96 h-64 md:h-96 bg-blue-500/10 rounded-full blur-[80px] md:blur-[120px]"></div>
  </div>

  <div class="container mx-auto px-4 z-10 w-full">
    <div class="bg-ocean-900/60 backdrop-blur-2xl border border-white/5 rounded-[1.5rem] md:rounded-[2.5rem] shadow-2xl overflow-hidden max-w-8xl mx-auto">
      
      <div class="p-5 md:p-8 border-b border-white/5 bg-linear-to-r from-white/2 to-transparent flex flex-col lg:flex-row items-center gap-6">
        
        <div class="relative group hidden sm:block">
          <div class="w-12 h-12 md:w-16 md:h-16 rounded-2xl bg-forest-500 flex items-center justify-center shadow-2xl shadow-forest-500/40 rotate-3 group-hover:rotate-0 transition-transform duration-500">
            <img src="/favicon.png" alt="Logo de ViaRisk">
          </div>
        </div>

        <div class="text-center lg:text-left grow">
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-display font-black text-white tracking-tight mb-1">
            VIA<span class="text-forest-500">RISK</span> ANALYTICS
          </h2>
          <div class="flex items-center justify-center lg:justify-start gap-3 md:gap-4 text-[9px] md:text-[10px] font-mono uppercase tracking-[0.2em] md:tracking-[0.3em]">
            <p class="text-white/40">Neural Engine v2.0</p>
            <span class="h-1 w-1 bg-white/20 rounded-full"></span>
            <p class="text-green-400 animate-pulse">Sistema Activo</p>
          </div>
        </div>

        <button class="group relative w-full lg:w-auto px-8 py-4 bg-transparent text-white rounded-2xl font-black text-xs tracking-[0.2em] uppercase transition-all duration-500 overflow-hidden active:scale-95 border border-white/10 shadow-[0_0_20px_rgba(16,185,129,0)] hover:shadow-[0_0_30px_rgba(16,185,129,0.3)] cursor-pointer hover:border-forest-500/50">
          <div class="absolute inset-0 bg-linear-to-r from-forest-600/20 to-emerald-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <span class="relative z-10 flex items-center justify-center gap-3">
            <span class="group-hover:text-forest-400 transition-colors">Lanzar Simulador</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-forest-500 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </span>
          <div class="absolute top-0 -inset-full h-full w-1/2 z-5 block transform -skew-x-12 bg-linear-to-r from-transparent via-white/10 to-transparent group-hover:animate-[shine_1.5s_ease-in-out_infinite]"></div>
        </button>
      </div>

      <div class="p-4 md:p-8 lg:p-12">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
          <div class="lg:col-span-8 xl:col-span-9 order-2 lg:order-1">
            <DashboardGrid />
          </div>

          <div class="lg:col-span-4 xl:col-span-3 order-1 lg:order-2">
            <AIInsights />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes shine {
    100% {
      left: 125%;
    }
  }
</style>