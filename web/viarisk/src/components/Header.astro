---
import Logo from "./Logo.astro";
// src/components/Header.astro
---

<header
  class="bg-ocean-900/95 backdrop-blur-md text-white border-b-4 border-forest-500 shadow-2xl sticky top-0 z-[100]"
>
  <div class="container mx-auto px-4 md:px-6 py-3 md:py-4 flex justify-between items-center">
    <a href="/" class="group flex items-center gap-2 shrink-0">
      <Logo className="text-xl md:text-2xl" />
    </a>

    <nav>
      <ul
        class="flex items-center gap-4 md:gap-8 font-sans font-semibold text-[10px] md:text-xs uppercase tracking-[0.15em] md:tracking-[0.2em]"
      >
        <li class="hidden sm:block">
          <a
            href="#dashboard"
            class="hover:text-forest-500 transition-colors py-2 border-b-2 border-transparent hover:border-forest-500"
          >
            Dashboard
          </a>
        </li>
        <li>
          <a
            href="#simulador"
            class="bg-forest-500 text-white px-4 md:px-6 py-2 md:py-3 rounded-full hover:bg-forest-600 transition-all shadow-lg shadow-forest-900/20 active:scale-95 inline-flex items-center gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 md:w-4 md:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <span class="leading-none">Simulador</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>