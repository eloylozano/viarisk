---
// src/components/Logo.astro
interface Props {
  className?: string;
  iconSize?: string;
}
const { className = "text-2xl", iconSize = "18" } = Astro.props;
---

<div class={`flex items-center gap-2 ${className}`}>
  <div class="bg-forest-500 w-8 h-8 rounded-lg flex items-center justify-center shadow-lg shadow-forest-500/20">
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      width={iconSize} 
      height={iconSize} 
      viewBox="0 0 24 24" 
      fill="none" 
      stroke="currentColor" 
      stroke-width="2.5" 
      stroke-linecap="round" 
      stroke-linejoin="round" 
      class="text-white"
    >
      <path d="m12 19 7-7 3 3-7 7-3-3z"></path>
      <path d="m18 13-1.5-7.5L4 2l3.5 12.5L13 18l5-5z"></path>
    </svg>
  </div>
  <span class="font-display font-black tracking-tighter uppercase text-white">
    VIA<span class="text-forest-500">RISK</span>
  </span>
</div>